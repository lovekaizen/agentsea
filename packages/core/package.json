{
  "name": "@lov3kaizen/agentsea-core",
  "version": "0.4.0",
  "description": "AgentSea - Unite and orchestrate AI agents. A production-ready ADK for building agentic AI applications with multi-provider support.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lov3kaizen/agentsea-types": "workspace:*",
    "@anthropic-ai/sdk": "^0.32.0",
    "@google/generative-ai": "^0.21.0",
    "openai": "^4.73.0",
    "zod": "^3.22.4",
    "zod-to-json-schema": "^3.22.4",
    "winston": "^3.11.0",
    "ioredis": "^5.3.2",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@vitest/coverage-v8": "^1.2.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "keywords": [
    "agentsea",
    "ai",
    "agents",
    "agentic",
    "llm",
    "anthropic",
    "claude",
    "openai",
    "gpt",
    "gemini",
    "google-ai",
    "ollama",
    "local-ai",
    "local-models",
    "mcp",
    "model-context-protocol",
    "multi-agent",
    "multi-provider",
    "workflows",
    "orchestration",
    "tools",
    "memory",
    "observability",
    "conversation",
    "chatbot",
    "voice",
    "tts",
    "stt",
    "text-to-speech",
    "speech-to-text",
    "whisper",
    "elevenlabs",
    "voice-assistant",
    "typescript",
    "nodejs"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "lovekaizen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lovekaizen/agentsea.git",
    "directory": "packages/core"
  },
  "homepage": "https://agentsea.dev",
  "bugs": {
    "url": "https://github.com/lovekaizen/agentsea/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
