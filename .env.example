# Anthropic API Key (required for Claude integration)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (optional, for OpenAI GPT, Whisper STT, and OpenAI TTS)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google AI API Key (optional, for Gemini integration)
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# ElevenLabs API Key (optional, for premium TTS)
# Get your key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Local Model Configuration (optional, for Ollama and other local providers)
# Ollama Base URL (default: http://localhost:11434)
OLLAMA_BASE_URL=http://localhost:11434

# LM Studio Base URL (default: http://localhost:1234)
LMSTUDIO_BASE_URL=http://localhost:1234/v1

# LocalAI Base URL (default: http://localhost:8080)
LOCALAI_BASE_URL=http://localhost:8080/v1

# Redis Configuration (optional, for Redis memory store)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Node Environment
NODE_ENV=development
